{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LocalBooru",
  "version": "0.3.10",
  "identifier": "com.localbooru.app",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": { "script": "npm run dev", "cwd": "../frontend" },
    "beforeBuildCommand": { "script": "npm run build", "cwd": "../frontend" }
  },
  "app": {
    "windows": [
      {
        "title": "LocalBooru",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob: http://localhost:* https://localhost:*; media-src 'self' blob: http://localhost:* https://localhost:*; connect-src 'self' http://localhost:* https://localhost:* ws://localhost:* wss://localhost:*; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Graphics",
    "shortDescription": "Local image library with automatic tagging",
    "longDescription": "LocalBooru is a local image library manager with automatic AI-powered tagging. It helps you organize and browse your image collection with smart search and filtering capabilities.",
    "homepage": "https://github.com/DonutsDelivery/LocalBooru",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "publisher": "DonutsDelivery",
    "resources": {
      "../api/**/*": "api/",
      "../python-venv-linux/**/*": "python-venv/"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "depends": [
          "libc6",
          "libgtk-3-0",
          "libwebkit2gtk-4.1-0",
          "libjavascriptcoregtk-4.1-0",
          "libgstreamer1.0-0",
          "gstreamer1.0-plugins-base",
          "gstreamer1.0-plugins-good",
          "gstreamer1.0-plugins-bad",
          "gstreamer1.0-plugins-ugly",
          "gstreamer1.0-libav",
          "libgstreamer-plugins-base1.0-0",
          "python3 (>= 3.10)"
        ],
        "recommends": [
          "gstreamer1.0-vaapi",
          "gstreamer1.0-gl",
          "ffmpeg"
        ],
        "section": "graphics",
        "priority": "optional",
        "files": {}
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3",
          "gstreamer1",
          "gstreamer1-plugins-base",
          "gstreamer1-plugins-good",
          "gstreamer1-plugins-bad-free",
          "gstreamer1-plugins-ugly-free",
          "gstreamer1-libav",
          "python3 >= 3.10"
        ],
        "release": "1",
        "epoch": 0,
        "files": {}
      }
    }
  }
}
