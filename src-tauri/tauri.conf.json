{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LocalBooru",
  "version": "2.0.0",
  "identifier": "com.localbooru.app",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5210",
    "beforeDevCommand": { "script": "npm run dev", "cwd": "../frontend" },
    "beforeBuildCommand": { "script": "npm run build", "cwd": "../frontend" }
  },
  "app": {
    "windows": [
      {
        "title": "LocalBooru",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob: http://localhost:* https://localhost:*; media-src 'self' blob: http://localhost:* https://localhost:*; connect-src 'self' http://localhost:* https://localhost:* ws://localhost:* wss://localhost:*; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Graphics",
    "shortDescription": "Local image library with automatic tagging",
    "longDescription": "LocalBooru is a local image library manager with optional AI-powered tagging via addons. Lightweight Rust backend with no Python required for core functionality.",
    "homepage": "https://github.com/DonutsDelivery/LocalBooru",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "publisher": "DonutsDelivery",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "depends": [
          "libc6",
          "libgtk-3-0",
          "libwebkit2gtk-4.1-0",
          "libjavascriptcoregtk-4.1-0"
        ],
        "recommends": [
          "ffmpeg"
        ],
        "section": "graphics",
        "priority": "optional",
        "files": {}
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3"
        ],
        "release": "1",
        "epoch": 0,
        "files": {}
      }
    }
  }
}
