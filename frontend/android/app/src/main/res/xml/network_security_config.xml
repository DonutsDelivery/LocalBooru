<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for LocalBooru

  This config allows:
  1. HTTPS connections with self-signed certificates (for local servers)
  2. HTTP connections (legacy servers and development)

  Security is enforced at the application level through certificate pinning:
  - Server generates self-signed TLS certificate
  - Certificate fingerprint is included in QR code
  - Mobile app validates the fingerprint matches before trusting the server
-->
<network-security-config>
    <!-- Allow cleartext traffic for legacy HTTP servers and local development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user-installed certificates (for testing) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!--
      Domain-specific config for localhost/local IPs
      These are common local network addresses where self-signed certs are expected
    -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Common private network ranges -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
